{{#each this}}
<li class="main-section-card">
    {{#if poster_path}}
    <img class="card-top-img" src="https://image.tmdb.org/t/p/original{{poster_path}}" data-id={{id}} alt="{{title}}" />
    {{else}}
    <img data-id={{id}} class="card-top-img" src="https://dummyimage.com/400x600/cfcfcf/ffffff&text=NO+IMAGE+AVAILABLE"
        alt="{{title}}" />
    {{/if}}
    <div class="card-body">
        <h3 class="card-title">{{title}}</h3>
        {{#if genre_ids}}
        <p class="card-genre">{{genre_ids}} | {{release_date}}</p>
        {{else}}
        <p class="card-genre">{{release_date}}</p>
        {{/if}}
    </div>
</li>
{{/each}}